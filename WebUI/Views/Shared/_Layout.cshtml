<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
	<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
	<div class="wall">
		<div class="container">
			<header class="blog-header py-3">
				<div class="row flex-nowrap justify-content-between align-items-center">
					<div class="col-4 pt-1">
						<a class="text-muted">Войти/Зарегистрироваться</a>
					</div>
					<div class="col-4 text-center">
						<img src="~/Content/Images/logo.png" />
					</div>
					<div class="col-4 d-flex justify-content-end align-items-center">
						<form class="form-inline my-2 my-md-0 text-right">
							<input class="form-control" type="text" placeholder="Поиск" />
						</form>
					</div>
				</div>
			</header>
		</div>
		<div class="top-menu">
			<div class="navbar-expand-lg navbar-dark justify-content-between navbar-pro ">
				<nav class="collapse navbar-collapse">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">@Html.ActionLink("Продукция", "List", "Products", null, new { @class = "nav-link" })</li>
						<li class="nav-item"><a class="nav-link" href="#">Культура пития</a></li>
						<li class="nav-item"><a class="nav-link" href="#">О проекте</a></li>
						<li class="nav-item">@Html.ActionLink("Контакты", "Index", "Contact", null, new { @class = "nav-link" })</li>
					</ul>
				</nav>
			</div>
		</div>
		<div class="container">
			<main class="container" role="main">
				<div class="row main">
					@RenderBody()
				</div>
			</main>
		</div>
		<footer class="blog-footer">
			<p>Магазин Lets-drink</p>
		</footer>
		<script src="~/Scripts/jquery-3.2.1.min.js"></script>
		<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
		<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
		<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
		<script src="~/Scripts/bootstrap.bundle.min.js"></script>
		<script src="~/Scripts/bootstrap.min.js"></script>
		<script src="~/Scripts/modernizr-2.6.2.js"></script>
		<script src="~/Scripts/jquery.maskedinput.js"></script>
		<script src="~/Scripts/jquery.maskedinput.min.js"></script>
		<script src="~/Scripts/LetsDrinkScript.js"></script>
	</div>
</body>
</html>